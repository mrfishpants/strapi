{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Company services and offerings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "shortDescription": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "fullDescription": {
      "type": "richtext"
    },
    "features": {
      "type": "json"
    },
    "sortOrder": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "default": "general",
      "enum": [
        "traffic-management",
        "planning",
        "emergency",
        "general"
      ]
    },
    "icon": {
      "type": "string"
    }
  }
}
